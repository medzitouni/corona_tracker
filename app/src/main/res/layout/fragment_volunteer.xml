<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pa3"
    tools:context=".VolunteerFragment"
    android:id="@+id/volunteer_page">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:background="@drawable/admin" />

            <ImageButton
                android:id="@+id/btnAllo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-50dp"
                app:srcCompat="@drawable/allo"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <EditText
            android:id="@+id/Message"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/hh"
            android:hint="@string/requesthint"
            android:inputType="text"
            android:autofillHints="" />
        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btm"
            android:text="@string/send"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>





</RelativeLayout>
